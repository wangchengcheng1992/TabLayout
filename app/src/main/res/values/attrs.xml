<resources>

    <!-- TagLayout -->
    <declare-styleable name="TagLayout">
        <attr name="tag_layout_mode" format="enum">
            <enum name="normal" value="201"/>
            <enum name="edit" value="202"/>
            <enum name="change" value="203"/>
            <enum name="single_choice" value="204"/>
            <enum name="multi_choice" value="205"/>
        </attr>
        <attr name="tag_layout_shape" format="enum">
            <enum name="round_rect" value="101"/>
            <enum name="arc" value="102"/>
            <enum name="rect" value="103"/>
        </attr>
        <attr name="tag_layout_random_color" format="boolean"/>
        <attr name="tag_layout_press_feedback" format="boolean"/>
        <!-- TagLayout -->
        <attr name="tag_layout_bg_color" format="color"/>
        <attr name="tag_layout_border_color" format="color"/>
        <attr name="tag_layout_border_width" format="dimension"/>
        <attr name="tag_layout_border_radius" format="dimension"/>
        <attr name="tag_layout_vertical_interval" format="dimension"/>
        <attr name="tag_layout_horizontal_interval" format="dimension"/>
        <attr name="tag_layout_fit_num" format="integer"/>
        <attr name="tag_layout_horizontal_reverse" format="boolean"/>
        <!-- TagView -->
        <attr name="tag_view_bg_color" format="color"/>
        <attr name="tag_view_border_color" format="color"/>
        <attr name="tag_view_text_color" format="color"/>
        <attr name="tag_view_bg_color_check" format="color"/>
        <attr name="tag_view_border_color_check" format="color"/>
        <attr name="tag_view_text_color_check" format="color"/>
        <attr name="tag_view_border_width" format="dimension"/>
        <attr name="tag_view_border_radius" format="dimension"/>
        <attr name="tag_view_text_size" format="dimension"/>
        <attr name="tag_view_vertical_padding" format="dimension"/>
        <attr name="tag_view_horizontal_padding" format="dimension"/>
        <attr name="tag_view_icon_padding" format="dimension"/>
    </declare-styleable>

    <!-- TagView -->
    <declare-styleable name="TagView">
        <attr name="tag_mode" format="enum">
            <enum name="normal" value="201"/>
            <enum name="check" value="204"/>
            <enum name="icon_check_invisible" value="206"/>
            <enum name="icon_check_change" value="207"/>
        </attr>
        <attr name="tag_shape" format="enum">
            <enum name="round_rect" value="101"/>
            <enum name="arc" value="102"/>
            <enum name="rect" value="103"/>
        </attr>
        <!-- 3、5 是Gravity里定义的值 -->
        <attr name="tag_gravity" format="enum">
            <enum name="left" value="3"/>
            <enum name="right" value="5"/>
        </attr>
        <attr name="tag_press_feedback" format="boolean"/>
        <attr name="tag_auto_check" format="boolean"/>
        <attr name="tag_checked" format="boolean"/>
        <attr name="tag_bg_color" format="color"/>
        <attr name="tag_border_color" format="color"/>
        <attr name="tag_text_color" format="color"/>
        <attr name="tag_bg_color_check" format="color"/>
        <attr name="tag_border_color_check" format="color"/>
        <attr name="tag_text_color_check" format="color"/>
        <attr name="tag_text_check" format="string"/>
        <attr name="tag_border_width" format="dimension"/>
        <attr name="tag_border_radius" format="dimension"/>
        <attr name="tag_vertical_padding" format="dimension"/>
        <attr name="tag_horizontal_padding" format="dimension"/>
        <attr name="tag_icon_padding" format="dimension"/>
        <attr name="tag_icon" format="reference"/>
        <attr name="tag_icon_change" format="reference"/>
        <attr name="tag_text" format="string"/>
        <attr name="tag_text_size" format="dimension"/>
    </declare-styleable>

</resources>